<% provide(:title, "Sign In") %>

<div class="post">
  <h2 class="clearfix title">Sign in</h2>
  <p class="clearfix meta"></p>
  <div class="entry">
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
      <%= f.error_notification %>
      <%= display_base_errors resource %>
      <%= f.input :email, :autofocus => true %>
      <%= f.input :password %>
      <% if devise_mapping.rememberable? %>
        <%= f.input :remember_me, :as => :boolean,
                    :label => false, :inline_label => 'Remember me',
                    :input_html => { :checked => true } %>
      <% end %>
      <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
