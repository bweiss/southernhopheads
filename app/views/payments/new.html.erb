<% provide(:title, "New Payment") %>

<div class="post">
  <h2 class="clearfix title">New Payment</h2>
  <p class="clearfix meta"></p>
  <div class="entry">
    <%= simple_form_for [@user, @payment], :html => { :class => 'form-vertical' } do |f| %>
      <%= f.error_notification %>
      <%= display_base_errors @payment %>
      <%= render 'fields', :f => f %>
      <%= f.button :submit, "Submit", :class => 'btn-primary' %>
    <% end %>
  </div>
</div>
