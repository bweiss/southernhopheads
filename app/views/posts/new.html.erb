<% provide(:title, "New Post") %>

<div class="post">
  <h2 class="clearfix title">New Post</h2>
  <p class="clearfix meta"></p>
  <div class="entry">
    <%= simple_form_for [@forum, Post.new] do |f| %>
      <%= f.error_notification %>
      <%= display_base_errors @post %>
      <%= render 'fields', :f => f %>
      <%= f.button :submit, "Submit", :class => 'btn-primary' %>
    <% end %>
  </div>
</div>
