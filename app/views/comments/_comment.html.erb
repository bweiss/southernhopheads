<div class="comment">
  <h5>
    <%= gravatar_for comment.user, :size => 26 %>
    <strong><%= link_to comment.user.name, comment.user %></strong>
    <small>at <%= comment.created_at %></small>
    <div class="admin-controls">
      <% if can? :update, comment %>
        <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_comment_path(comment) %>
      <% end %>
      <% if can? :destroy, comment %>
        <%= link_to '<i class="icon-trash"></i>'.html_safe, comment_path(comment), :method => :delete, :data => { :confirm => "Are you sure you want to delete this comment?" } %>
      <% end %>
    </div>
  </h5>
  <div class="well well-small">
    <%= RedCloth.new(strip_tags(comment.content)).to_html.html_safe %>
  </div>
</div>
