<%= f.input :title, :autofocus => true %>
<hr />
<%= f.label 'Start time' %>
<%= f.datetime_picker 'start_at', :dateFormat => "yy-mm-dd" %>
<%= f.label 'End time (optional)' %>
<%= f.datetime_picker 'end_at', :dateFormat => "yy-mm-dd" %>
<%= f.input :location %>
<hr />
<%= f.input :content, :as => :text %>
<%= f.input :featured, :label => false, :inline_label => "Feature this event on the front page" %>
<%= f.input :allow_comments, :label => false, :inline_label => 'Allow comments', :input_html => { :checked => true } %>
