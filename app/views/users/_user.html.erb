<td><%= link_to user.name, user %></td>
<td><%= user.email %></td>
<td><%= user.created_at.to_date %></td>
<td><%= user.payment.nil? ? "n/a" : (user.payment.payment_date + 1.year).to_date %></td>
<td>
  <% if current_user.has_role? :treasurer %>
    <%= link_to '<i class="icon-briefcase"></i>'.html_safe, user.payment.nil? ? new_user_payment_path(user) : edit_payment_path(user.payment) %>
  <% end %>
  <%= link_to '<i class="icon-trash"></i>'.html_safe, user_path(user), :data => { :confirm => "Are you sure you want to delete this user?" }, :method => :delete unless user == current_user %>
</td>
