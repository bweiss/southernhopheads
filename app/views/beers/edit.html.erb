<% provide(:title, "Edit Beer") %>

<div class="post">
  <h2 class="clearfix title">Edit Beer</h2>
  <p class="clearfix meta"></p>
  <div class="entry">
    <%= simple_form_for @beer do |f| %>
      <%= f.error_notification %>
      <%= display_base_errors @beer %>
      <%= render 'fields', :f => f %>
      <%= f.button :submit, "Submit", :class => 'btn-primary' %>
    <% end %>
  </div>
</div>
