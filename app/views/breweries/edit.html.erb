<% provide(:title, "Edit Brewery") %>

<div class="post">
  <h2 class="clearfix title">Edit Brewery</h2>
  <p class="clearfix meta"></p>
  <div class="entry">
    <%= simple_form_for @brewery do |f| %>
      <%= f.error_notification %>
      <%= display_base_errors @brewery %>
      <%= render 'fields', :f => f %>
      <%= f.button :submit, "Submit", :class => 'btn-primary' %>
    <% end %>
  </div>
</div>
