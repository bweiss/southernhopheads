<% provide(:title, "Edit Forum") %>

<div class="post">
  <h2 class="clearfix title">Edit Forum</h2>
  <p class="clearfix meta"></p>
  <div class="entry">
    <%= simple_form_for @forum do |f| %>
      <%= f.error_notification %>
      <%= display_base_errors @forum %>
      <%= render 'fields', :f => f %>
      <%= f.button :submit, "Submit", :class => 'btn-primary' %>
    <% end %>
  </div>
</div>
